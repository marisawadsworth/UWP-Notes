<Page x:ConnectionId='1'
    x:Class="Buttons.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Buttons"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"                     
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:ConnectionId='2' Name="LayoutGrid">
        <Button x:ConnectionId='3' Name="XAMLClickMeButton" 
            Content="XAML Button" 
            Margin="20,20,0,0" 
            VerticalAlignment="Top" 
                                       
            Background="Red" 
            Width="200" 
            Height="100" />

        <TextBlock x:ConnectionId='4' x:Name="MessageBlock" 
               HorizontalAlignment="Left" 
               Margin="10,150,0,0" 
               TextWrapping="Wrap" 
               Text="" 
               VerticalAlignment="Top" 
               FontSize="48" />

        <TextBlock x:ConnectionId='5' x:Name="CSharpMessageBlock" 
               HorizontalAlignment="Left" 
               Margin="10,150,0,0" 
               TextWrapping="Wrap" 
               Text="" 
               VerticalAlignment="Top" 
               FontSize="48" />


    </Grid>
</Page>

